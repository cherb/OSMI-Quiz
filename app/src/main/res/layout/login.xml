<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".StartActivity"
    android:background="#ff2200"
    android:clickable="false">

    <ImageView
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="@string/mail"
        android:id="@+id/mail"
        android:textColor="#ffffff"
        android:layout_below="@id/imageView"
        android:layout_marginTop="50dp"/>

    <TextView
        android:background="#ffffff"
        android:layout_width="420dp"
        android:layout_height="wrap_content"
        android:hint="@string/mail2"
        android:id="@+id/mail2"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/mail"
        android:layout_toRightOf="@id/mail"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="@string/passwort"
        android:id="@+id/passwort"
        android:textColor="#ffffff"
        android:layout_below="@+id/mail"
        android:layout_marginTop="20dp"/>

    <TextView
        android:background="#ffffff"
        android:layout_width="420dp"
        android:layout_height="wrap_content"
        android:hint="@string/passwort2"
        android:id="@+id/passwort2"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/passwort"
        android:layout_toRightOf="@id/passwort"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:id="@+id/login2"
        android:layout_marginTop="70dp"
        android:background="@drawable/button_design"
        android:layout_below="@+id/passwort"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:id="@+id/cancel1"
        android:layout_marginTop="70dp"
        android:background="@drawable/button_design"
        android:layout_below="@+id/passwort"
        android:layout_toRightOf="@+id/login2"
        android:layout_marginLeft="60dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:id="@+id/register"
        android:layout_below="@+id/login2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_design"
        android:layout_marginTop="50dp"/>

</RelativeLayout>